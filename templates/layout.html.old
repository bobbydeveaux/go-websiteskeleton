{{define "base"}}

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="DVO Media is an online digital agency creating modern websites using the latest technology.">
        <meta name="keywords" content="Websites, online, media, monetisation, cpa, cpc, technology">

        <meta name="robots" content="index,follow" />
        <meta name="copyright" content="DVO Media" />

        <script type="text/javascript" src="/static/js/external/jquery/jquery-2.0.3.min.js"></script>
        <script type="text/javascript" src="/static/js/external/bootstrap/bootstrap.min.js"></script>

        <link rel="stylesheet" type="text/css" href="/static/css/app.css">

        <title>{{ .Title }} - Go Template</title>
    </head>
    <body>
        <div class="container">
            <nav class="navbar navbar-default" role="navigation">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/">Go Template</a>
                </div>

                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li class="{{if eq .Active "home"}}active{{end}}"><a href="/">Home</a></li>
                        <li class="{{if eq .Active "user_home"}}active{{end}}"><a href="/user">User</a></li>
                        <li class="{{if eq .Active "cart"}}active{{end}}"><a href="/cart">Cart</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="#">Blank</a></li>
                        <li><a target="_blank" href="https://github.com/jadekler/git-go-websiteskeleton">Site Code</a></li>
                    </ul>
                </div>
            </nav>

            {{template "body" .}}



            <div id="layout-footer">
                <div class="container">
                    <div class="row">
                      &copy; 2014 All Rights Reserved.
                    </div>
                </div>
            </div>
        </div>

    </body>
</html>

{{end}}
